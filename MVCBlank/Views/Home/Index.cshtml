
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div ng-controller="testController as tc">
    {{tc.message}}
</div>
<login-form></login-form>
@section scripts{
<script src="~/Scripts/app/services/authService.js"></script>
<script src="~/Scripts/app/component/loginComponent.js"></script>
    <script>
        (function () {
            'use strict';
            angular.module(appName).controller("testController", TestController);
            TestController.$inject = ["$scope"];

            function TestController($scope) {
                var vm = this;
                vm.message = "Controller Works!";
            }
        })();
        (function () {
            'use strict';
            angular.module(appName).component("test", {
                bindings: {},
                template: "{{$ctrl.test}}",
                controller: function ($scope) {
                    vm = this;
                    vm.test = "Component Works!";
                }
            });
        })();
    </script>
    }